<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingBottom="3dp">

                <androidx.appcompat.widget.Toolbar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp">

                        <ImageView
                            android:layout_gravity="center_vertical"
                            android:id="@+id/back_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_arrow_back_black_24dp" />

                        <LinearLayout
                            android:id="@+id/toolbar_search"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="14dp"
                            android:layout_marginRight="14dp"
                            android:background="@drawable/rounded_bg_search"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="9dp"
                                android:src="@drawable/ic_search_black_24dp" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/search_box"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingEnd="25dp"
                                    android:layout_marginEnd="8dp"
                                    android:background="@android:color/transparent"
                                    android:fontFamily="@font/roboto_medium"
                                    android:hint="Cari Pelanggan .."
                                    android:imeOptions="actionSearch"
                                    android:maxLines="1"
                                    android:minHeight="40dp"
                                    android:minLines="1"
                                    android:paddingStart="8dp"
                                    android:singleLine="true"
                                    android:textColor="@color/greyTagihin"
                                    android:textColorHint="@color/greyTagihin"
                                    android:textSize="14sp" />
                            </RelativeLayout>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>
        <com.mikelau.views.shimmer.ShimmerRecyclerViewX
            android:layout_width="match_parent"
            android:id="@+id/search_recycler"
            android:layout_height="match_parent"
            app:shimmer_demo_child_count="5"
            app:shimmer_demo_layout="@layout/shimmer_bill_item"
            app:shimmer_demo_layout_manager_type="linear_vertical"/>

    </LinearLayout>

</layout>
